generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RESEPSIONIS
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RESEPSIONIS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  guests    Guest[]  @relation("UpdatedBy")
  Log       Log[]
}

model Guest {
  id           String         @id @default(uuid())
  name         String
  rsvpCode     String         @unique
  isAttending  Boolean?       @default(false)
  isPresent    Boolean        @default(false)
  isDeleted    Boolean        @default(false)
  updatedById  String?
  updatedAt    DateTime       @updatedAt
  createdAt    DateTime       @default(now())
  isRSVPed     Boolean        @default(false)
  phone        String?        @unique
  updatedBy    User?          @relation("UpdatedBy", fields: [updatedById], references: [id])
  GuestComment GuestComment[]
  Log          Log[]
}

model GuestComment {
  id        String   @id @default(uuid())
  guest     Guest?   @relation(fields: [guestId], references: [id])
  guestId   String?
  message   String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id        String   @id @default(uuid())
  action    String
  guestId   String?
  guest     Guest?   @relation(fields: [guestId], references: [id])
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Wedding {
  id                   String  @id @default(uuid())
  groomName            String
  brideName            String
  groomInstagram       String? // optional
  brideInstagram       String? // optional
  groomFather          String
  groomMother          String
  brideFather          String
  brideMother          String
  groomPhoto           String // URL or path
  bridePhoto           String // URL or path
  heroImage            String // landing section image
  invitationBackground String // background image in the invitation section
  closingImage         String // image for the closing section
  verseText            String
  verseSource          String
  closingTitle         String
  closingMessage       String

  events    Event[] // relation to event(s)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String @id @default(uuid())
  weddingId   String
  title       String
  date        String
  startTime   String
  endTime     String
  streetName  String
  fullAddress String
  mapsUrl     String

  wedding Wedding @relation(fields: [weddingId], references: [id], onDelete: Cascade)
}
