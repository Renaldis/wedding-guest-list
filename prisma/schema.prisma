generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(uuid())
  name      String
  email     String          @unique
  password  String
  role      Role            @default(RESEPSIONIS)
  guests    Guest[]         @relation("UpdatedBy")
  logs      AttendanceLog[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum Role {
  ADMIN
  RESEPSIONIS
}

model Guest {
  id              String          @id @default(uuid())
  name            String
  email           String?         @unique
  phone           String?         @unique
  rsvpCode        String          @unique
  isRSVPed        Boolean         @default(false) //sudah konfirm rsvp
  isAttending     Boolean? //akan hadir diacara?
  isPresent       Boolean         @default(false) // hadir di hari H
  greetingMessage String?
  updatedById     String? // siapa yang update terakhir
  updatedBy       User?           @relation("UpdatedBy", fields: [updatedById], references: [id])
  updatedAt       DateTime        @updatedAt
  logs            AttendanceLog[]
  createdAt       DateTime        @default(now())
}

model AttendanceLog {
  id        String   @id @default(uuid())
  guest     Guest    @relation(fields: [guestId], references: [id])
  guestId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  action    String // contoh: "checked-in", "manual-add", "rsvp-submit"
  timestamp DateTime @default(now())
}
