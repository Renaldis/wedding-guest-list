generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RESEPSIONIS
}

enum ActorType {
  USER
  GUEST
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RESEPSIONIS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  guests    Guest[]  @relation("UpdatedBy")
}

model Guest {
  id           String         @id @default(uuid())
  name         String
  rsvpCode     String         @unique
  isAttending  Boolean?       @default(false)
  isPresent    Boolean        @default(false)
  isDeleted    Boolean        @default(false)
  updatedById  String?
  updatedAt    DateTime       @updatedAt
  createdAt    DateTime       @default(now())
  isRSVPed     Boolean        @default(false)
  phone        String?        @unique
  updatedBy    User?          @relation("UpdatedBy", fields: [updatedById], references: [id])
  Log          Log[]          @relation("GuestLogs")
  GuestComment GuestComment[]
}

model GuestComment {
  id        String   @id @default(uuid())
  guest     Guest?   @relation(fields: [guestId], references: [id])
  guestId   String?
  message   String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id            String    @id @default(uuid())
  guestId       String
  guest         Guest     @relation("GuestLogs", fields: [guestId], references: [id])
  actorId       String
  actorType     ActorType
  action        String
  changedFields String?
  previousData  Json?
  newData       Json?
  createdAt     DateTime  @default(now())
}
